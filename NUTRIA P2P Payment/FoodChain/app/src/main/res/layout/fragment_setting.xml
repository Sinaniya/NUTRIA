<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.SettingFragments.SettingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray">
        <TextView
            android:id="@+id/settingBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:layout_below="@id/tvCancel"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="15sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tvProfile"
            android:layout_marginTop="6sp"
            android:text="@string/printer"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/tvProfile"
            android:background="@color/lightGray"/>
    </LinearLayout>
   <LinearLayout
       android:id="@+id/linearActions"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@id/header"
       android:layout_marginTop="10sp">
       <TextView
           android:id="@+id/allActions"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10sp"
           android:layout_toRightOf="@id/tvProfile"
           android:layout_marginTop="6sp"
           android:text="@string/action"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:textStyle="bold" />

       <View
           android:layout_width="match_parent"
           android:layout_height="1sp"
           android:layout_marginTop="10sp"
           android:layout_marginLeft="15sp"
           android:layout_below="@id/tvProfile"
           android:background="@color/lightGray"/>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCertificates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearActions"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/allCertificates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tvProfile"
            android:layout_marginTop="6sp"
            android:text="@string/certificate"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/tvProfile"
            android:background="@color/lightGray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCreateActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearCertificates"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/createNewAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tvProfile"
            android:layout_marginTop="6sp"
            android:text="@string/createAction"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/tvProfile"
            android:background="@color/lightGray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCreateCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearCreateActions"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/createNewCertificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tvProfile"
            android:layout_marginTop="6sp"
            android:text="@string/create_certificate"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/tvProfile"
            android:background="@color/lightGray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/linearCreateCertificate">

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/tvProfile"
            android:layout_marginTop="6sp"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/tvProfile"
            android:background="@color/lightGray"/>

    </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomBarSetting"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/lightGray"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/producer_navigation"
        app:showAsAction="ifRoom">

    </android.support.design.widget.BottomNavigationView>
</RelativeLayout>