<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1600"
    tools:context=".Fragments.ProcessActionFragment">

    <RelativeLayout
        android:layout_weight="200"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray">

        <ImageView
            android:id="@+id/ivProcessBack"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/less_than"
            android:layout_marginTop="14sp"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:id="@+id/tvProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productTag"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/ivProcessBack"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvNewProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProducer"
            android:layout_toRightOf="@id/back"
            android:text="@string/newProductTag"
            android:textColor="@color/black"
            android:layout_marginLeft="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:textSize="22sp"/>


    </RelativeLayout>

    <TextView
        android:layout_weight="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectProcess"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1000"
        android:id="@+id/rv_newProductTag"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp">
    </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otherLicenses"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15sp"
                />
        </LinearLayout>

        <RelativeLayout

            android:id="@+id/tvCreateAction"
            android:layout_weight="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createAction"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15sp"
                />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/greater"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15sp"
            android:background="@color/lightGray"/>

    <Button
        android:layout_weight="100"
        android:id="@+id/btnProcessDone"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue"
        android:text="@string/done"
        android:layout_gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textSize="16sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:textColor="@color/white"/>

    </LinearLayout>


