<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2500"
    tools:context=".Fragments.ProducerFragments.ProducerLoginFragment">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray">

        <LinearLayout
            android:id="@+id/backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/less_than"
                android:layout_marginTop="14sp"
                android:layout_marginLeft="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/back"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>



        <TextView
            android:id="@+id/tvNewProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backLayout"
            android:text="Login"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:textSize="24sp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="900"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15sp"
            />
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_bg"
            android:inputType="textEmailAddress"
            android:textColorHint="#fff"
            android:textColor="@color/black"
            android:paddingLeft="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15sp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="2sp"
            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="@color/black"
            android:paddingLeft="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="vertical">

    <Button
        android:id="@+id/btnProducerSignIn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="90"
        android:weightSum="3"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvRegisterProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/new_producer"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>