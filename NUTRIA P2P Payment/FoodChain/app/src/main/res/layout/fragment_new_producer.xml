<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProducerFragments.NewProducerFragment">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/less_than"
                    android:layout_marginTop="14sp"
                    android:layout_marginLeft="15sp"/>

                <TextView
                    android:id="@+id/tvProducer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producer"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/back"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNewProducer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvProducer"
                    android:layout_toRightOf="@id/back"
                    android:text="@string/newProducer"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producerName"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etProducername"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#fff"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producerCertificate"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etProducerCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etProducerUsername"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passwd"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etProducerPasswd"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textPassword"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etEthereumAccount"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/website"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
                <EditText
                    android:id="@+id/etWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:paddingLeft="10sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15sp"
                android:background="@color/lightGray"
                android:paddingTop="3sp"
                android:paddingBottom="3sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/licences"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutLicencesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="10sp"
                android:paddingBottom="5sp">
                <TextView
                    android:id="@+id/tvCertificateList"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="@string/enterList"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />

                <ImageView
                    android:id="@+id/ivLicencesEnterList"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/greater"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2sp"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="5sp"
                android:background="@color/lightGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:background="@color/lightGray"
                android:paddingTop="3sp"
                android:paddingBottom="3sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/processAction"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutActionlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="10sp"
                android:paddingBottom="5sp">
                <TextView
                    android:id="@+id/tvActionsList"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="@string/enterList"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15sp"
                    />

                <ImageView
                    android:id="@+id/ivProcessEnterlist"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/greater"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2sp"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                android:text="@string/reister"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:layout_marginBottom="10sp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>